<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a777.card_campus.activity.DaikeDetailActivity"
    android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:contentInsetStart="0dp">
                <Button
                    android:id="@+id/daikedetail_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back"/>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:contentPadding="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dkdetail_avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/avatar1"/>

                    <TextView
                        android:id="@+id/dkdetail_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/dkdetail_avatar"
                        android:layout_alignTop="@+id/dkdetail_avatar"/>

                    <TextView
                        android:id="@+id/dkdetail_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_below="@+id/dkdetail_username"
                        android:layout_toRightOf="@+id/dkdetail_avatar"
                        android:layout_alignBottom="@+id/dkdetail_avatar"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/daikedetail_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="10dp"/>
                    <TextView
                        android:id="@+id/daikedetail_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/daikedetail_title"
                        android:layout_alignLeft="@+id/daikedetail_title"
                        android:padding="10dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/dkdetail_qq"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/qq"/>
                    <Button
                        android:id="@+id/dkdetail_tel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/dkdetail_qq"
                        android:background="@drawable/phone"/>

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>
